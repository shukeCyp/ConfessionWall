.comments-container {
  min-height: 100vh;
  background-color: #f7f7f7;
  padding-bottom: 100rpx;
}
.comments-list {
  padding: 20rpx;
}
.comments-list .comment-item {
  display: flex;
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
}
.comments-list .comment-item .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}
.comments-list .comment-item .comment-content {
  flex: 1;
}
.comments-list .comment-item .comment-content .comment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}
.comments-list .comment-item .comment-content .comment-header .nickname {
  font-size: 28rpx;
  color: #576b95;
  font-weight: 500;
}
.comments-list .comment-item .comment-content .comment-header .time {
  font-size: 24rpx;
  color: #999;
}
.comments-list .comment-item .comment-content .text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}
.comment-input {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
}
.comment-input input {
  flex: 1;
  height: 72rpx;
  background-color: #f7f7f7;
  border-radius: 36rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
}
.comment-input .send-btn {
  width: 120rpx;
  height: 72rpx;
  background-color: #07c160;
  color: #fff;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}
.comment-input .send-btn:active {
  opacity: 0.8;
}