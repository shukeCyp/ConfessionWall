.login-container {
  min-height: 100vh;
  background: #ffffff;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 40rpx;
  position: relative;
}
.logo-box {
  margin-top: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.logo-box .logo {
  width: 200rpx;
  height: auto;
  margin-bottom: 40rpx;
  border-radius: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.05);
}
.logo-box .slogan {
  margin-top: 30rpx;
  font-size: 32rpx;
  color: #07c160;
  font-weight: 500;
}
.flex-grow {
  flex: 1;
}
.login-box {
  width: 100%;
  padding: 0 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 120rpx;
  /* 调整与协议区域的间距 */
}
.login-box .wx-login-btn {
  width: 600rpx;
  height: 90rpx;
  background: #07c160;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 45rpx;
  box-shadow: 0 10rpx 20rpx rgba(7, 193, 96, 0.2);
  border: none;
}
.login-box .wx-login-btn::after {
  border: none;
}
.login-box .wx-login-btn:active {
  background: #06ae56;
}
.login-box .wx-login-btn .wx-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}
.login-box .wx-login-btn text {
  font-size: 32rpx;
  font-weight: 500;
}
.login-box .tips {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #999;
}
.agreement {
  padding-bottom: 50rpx;
  width: 100%;
  display: flex;
  justify-content: center;
}
.agreement .agreement-content {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
  padding: 20rpx;
}
.agreement .agreement-content .agreement-text {
  margin: 0 4rpx;
}
.agreement .agreement-content .link {
  color: #07c160;
}