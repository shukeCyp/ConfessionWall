.page-container {
  min-height: 100vh;
  background: #fff;
}
.status-tabs {
  display: flex;
  background: #fff;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  z-index: 1;
}
.status-tabs .tab-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  position: relative;
  padding: 16rpx 0;
}
.status-tabs .tab-item.active {
  color: #07c160;
  font-weight: 500;
}
.status-tabs .tab-item.active:after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #07c160;
  border-radius: 2rpx;
}
.posts-container {
  height: calc(100vh - 100rpx);
}
.post-list {
  padding: 0;
}
.post-list .post-item {
  background: #fff;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #e0e0e0;
  display: flex;
}
.post-list .post-item .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}
.post-list .post-item .content-box {
  flex: 1;
  position: relative;
}
.post-list .post-item .content-box .nickname {
  font-size: 32rpx;
  color: #576b95;
  margin-bottom: 16rpx;
}
.post-list .post-item .content-box .content {
  font-size: 32rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 20rpx;
  min-height: 45rpx;
}
.post-list .post-item .content-box .content.empty-content {
  margin-bottom: 24rpx;
}
.post-list .post-item .content-box .time {
  font-size: 24rpx;
  color: #999;
}
.post-list .post-item .content-box .status-tag {
  position: absolute;
  right: 0;
  top: 0;
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}
.post-list .post-item .content-box .status-tag.pending {
  color: #ff9900;
  background: rgba(255, 153, 0, 0.1);
}
.post-list .post-item .content-box .image-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 6rpx;
  margin: 16rpx 0;
}
.post-list .post-item .content-box .image-grid image {
  width: 100%;
  aspect-ratio: 1;
  height: auto;
  border-radius: 8rpx;
}
.post-list .post-item .content-box .video-container {
  margin: 16rpx 0;
}
.post-list .post-item .content-box .video-container .video-wrapper {
  position: relative;
  display: inline-block;
  border-radius: 8rpx;
  overflow: hidden;
  background: #000;
}
.post-list .post-item .content-box .video-container .video-wrapper video {
  display: block;
  border-radius: 8rpx;
}
.empty-tip {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
}