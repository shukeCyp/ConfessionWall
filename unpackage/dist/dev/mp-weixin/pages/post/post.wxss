.post-container {
  min-height: 100vh;
  background: #fff;
  padding-bottom: 140rpx;
}
.status-bar {
  background: #f8f8f8;
}
.nav-bar {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #f8f8f8;
  border-bottom: 1rpx solid #eee;
}
.nav-bar .title {
  font-size: 32rpx;
  color: #333;
  font-weight: normal;
}
.content-box {
  padding: 30rpx;
}
.content-box .content {
  width: 100%;
  min-height: 200rpx;
  font-size: 32rpx;
  line-height: 1.5;
  color: #333;
}
.content-box .content::-webkit-input-placeholder {
  color: #999;
}
.content-box .content::placeholder {
  color: #999;
}
.video-container {
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: center;
}
.video-container .video-wrapper {
  position: relative;
  width: 50vw;
  height: 50vh;
  background: #000;
  border-radius: 8rpx;
  overflow: hidden;
}
.video-container .video-wrapper .video-cover {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.video-container .video-wrapper .delete-icon {
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  width: 50rpx;
  height: 50rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1;
}
.video-container .video-wrapper .delete-icon .delete-image {
  width: 30rpx;
  height: 30rpx;
}
.video-container .video-wrapper .play-icon {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  font-size: 80rpx;
  color: rgba(255, 255, 255, 0.8);
}
.image-container {
  padding: 20rpx 30rpx;
}
.image-container .image-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}
.image-container .image-grid .image-item {
  position: relative;
  width: 100%;
  padding-bottom: 100%;
}
.image-container .image-grid .image-item image {
  position: absolute;
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 8rpx;
}
.image-container .image-grid .add-image {
  position: relative;
  width: 100%;
  padding-bottom: 100%;
  background: #f7f7f7;
  border-radius: 8rpx;
}
.image-container .image-grid .add-image .add-icon {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 60rpx;
  height: 60rpx;
  line-height: 54rpx;
  text-align: center;
  font-size: 60rpx;
  color: #999;
  font-weight: 100;
}
.bottom-btns {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  padding: 20rpx 30rpx calc(20rpx + env(safe-area-inset-bottom));
  background: #fff;
  border-top: 1rpx solid #eee;
}
.bottom-btns .btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 32rpx;
  margin: 0 12rpx;
  border-radius: 8rpx;
}
.bottom-btns .btn.cancel {
  background: #f8f8f8;
  color: #333;
}
.bottom-btns .btn.publish {
  background: #f8f8f8;
  color: #999;
}
.bottom-btns .btn.publish.active {
  background: #07c160;
  color: #fff;
}
.bottom-btns .btn::after {
  border: none;
}