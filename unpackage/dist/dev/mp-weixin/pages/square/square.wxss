.square-container {
  min-height: 100vh;
  background-color: #f7f7f7;
}
.banner {
  height: 300rpx;
}
.banner image {
  width: 100%;
  height: 100%;
}
.list-header {
  text-align: center;
  padding: 20rpx 0;
  font-size: 24rpx;
  color: #999;
}
.post-list {
  padding: 0 0 120rpx;
}
.post-list .post-item {
  background-color: #fff;
  padding: 30rpx;
  display: flex;
  border-bottom: 1rpx solid #eee;
}
.post-list .post-item .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}
.post-list .post-item .content-box {
  flex: 1;
}
.post-list .post-item .content-box .nickname {
  font-size: 30rpx;
  color: #576b95;
  font-weight: 500;
  margin-bottom: 10rpx;
}
.post-list .post-item .content-box .content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 16rpx;
}
.post-list .post-item .content-box .single-image {
  margin: 16rpx 0;
}
.post-list .post-item .content-box .single-image image {
  max-width: 400rpx;
  border-radius: 8rpx;
}
.post-list .post-item .content-box .grid-images {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 6rpx;
  margin: 16rpx 0;
}
.post-list .post-item .content-box .grid-images image {
  width: 100%;
  height: 220rpx;
  border-radius: 8rpx;
}
.post-list .post-item .content-box .video-container {
  margin: 16rpx 0;
}
.post-list .post-item .content-box .video-container video {
  width: 100%;
  height: 400rpx;
  border-radius: 8rpx;
}
.post-list .post-item .content-box .interaction-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 16rpx;
}
.post-list .post-item .content-box .interaction-info .time {
  font-size: 24rpx;
  color: #999;
}
.post-list .post-item .content-box .interaction-box {
  margin-top: 16rpx;
  background-color: #f7f7f7;
  border-radius: 6rpx;
  padding: 16rpx;
}
.post-list .post-item .content-box .interaction-box .like-list {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #576b95;
}
.post-list .post-item .content-box .interaction-box .like-list .cuIcon-heart {
  margin-right: 10rpx;
}
.post-list .post-item .content-box .interaction-box .comment-list {
  margin-top: 10rpx;
  padding-top: 10rpx;
  border-top: 1rpx solid #eee;
}
.post-list .post-item .content-box .interaction-box .comment-list .comment-item {
  font-size: 26rpx;
  line-height: 1.6;
  padding: 6rpx 0;
}
.post-list .post-item .content-box .interaction-box .comment-list .comment-item .comment-user {
  color: #576b95;
  font-weight: 500;
}
.post-list .post-item .content-box .interaction-box .comment-list .comment-item .comment-content {
  color: #333;
}
.post-list .post-item .content-box .interaction-box .comment-list .view-more {
  font-size: 26rpx;
  color: #576b95;
  padding: 10rpx 0;
}
.post-list .post-item .content-box .interaction-box .comment-list .view-more:active {
  opacity: 0.7;
}
.post-fab {
  position: fixed;
  right: 30rpx;
  bottom: 140rpx;
  width: 100rpx;
  height: 100rpx;
  background: #07c160;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(7, 193, 96, 0.3);
  z-index: 99;
}
.post-fab text {
  font-size: 60rpx;
  color: #fff;
  font-weight: bold;
}